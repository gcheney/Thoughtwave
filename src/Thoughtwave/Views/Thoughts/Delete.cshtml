@model Thought

@{
    ViewData["Title"] = @ViewBag.Title;
}

@if (Model.Image != null)
{
    <header class="intro-header" style="background-image: url('@Model.Image')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>@Model.Title</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
}
else
{
    @await Html.PartialAsync("_PageHeader", @Model.Title)
}

 <!-- Thought Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 col-md-12">
                <div class="well well-md">
                    <div class="text-center">
                        <h1>Are you sure you want to delete this thought?</h1>
                        <h3 class="text-danger">This action cannot be undone!</h3>
                        <form method="POST" asp-antiforgery="true">
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i> Delete Thought
                            </button>
                        </form>
                    </div>
                </div>
                <div class="well well-lg clearfix">
                    <div class="text-center">
                        <h1 class="section-heading">@Model.Title</h1>
                    </div>
                    <div class="lead">
                        @Html.Raw(WebUtility.HtmlDecode(Model.Content))
                    </div>
                    <hr />
                </div>
            </div>             
        </div>
    </div>
</article>