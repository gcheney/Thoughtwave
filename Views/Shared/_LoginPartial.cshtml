@using Microsoft.AspNetCore.Identity
@using Thoughtwave.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#search">Search <i class="fa fa-search" aria-hidden="true"></i></a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">My Account</a>
            </li>
            <li>
                <a id="logoutLink"><i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="#search">Search <i class="fa fa-search" aria-hidden="true"></i></a>
        </li>
        <li>
            <a href="/account/register"><i class="fa fa-user" aria-hidden="true"></i> Register</a>
        </li>
        <li>
            <a href="/account/login"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</a>
        </li>
    </ul>
}
