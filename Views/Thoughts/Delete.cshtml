@model ThoughtViewModel

@{
    ViewData["Title"] = @ViewBag.Title;
}

@await Html.PartialAsync("_PageHeader")

 <!-- Thought Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 col-md-12">
                <div class="well well-md">
                    <div class="text-center">
                        <h1>Are you sure you want to delete this thought?</h1>
                        <h3 class="text-danger">This action cannot be undone!</h3>
                        <form method="POST" asp-antiforgery="true">
                            <button type="submit" class="btn btn-danger">Delete Thought</button>
                        </form>
                    </div>
                </div>
                <div class="well well-lg clearfix">
                    <div class="text-center">
                        <h1 class="section-heading">@Model.Title</h1>
                    </div>
                    <div class="lead">
                        @Html.Raw(Model.Content)
                    </div>
                    <hr />
                </div>
            </div>             
        </div>
    </div>
</article>