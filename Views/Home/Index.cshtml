@model IEnumerable<Sophophile.Models.Question>

@{
    ViewData["Title"] = "Home";
}

<!-- Home Page Header -->
<header class="intro-header" style="background-image: url('/images/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Sophophile</h1>
                    <hr class="large">
                    <a href="/account/login" class="btn btn-success btn-intro-header ">
                        <i class="fa fa-sign-in" aria-hidden="true"></i> Sign In
                    </a>
                    <a href="/account/register" class="btn btn-primary btn-intro-header ">
                        <i class="fa fa-user" aria-hidden="true"></i> Sign up
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Page Content -->
<h1 class="text-center">Latest Questions</h1>
<hr class="large"/>

@foreach (var question in Model)
{
    <div class="content-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-preview">
                        <div class="well well-lg clearfix">
                            <a target="_blank" href="/read">
                                <h1 class="section-heading text-center">@question.Title</h1>
                            </a>
                            <img alt="User Image" src="@question.User.Avatar" class="pull-left user-img img-circle">
                            <p class="text-muted">
                                Posted by <a href="#">@question.User.FullName</a> on @question.CreatedOn.ToString("MM/dd/yyyy")
                            </p>
                            <p class="lead">
                                @question.Content
                            </p>
                            <hr />
                            <a href="/read" class="btn pull-right">
                                See Answers <i class="fa fa-arrow-right" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

